
@{
    ViewBag.Title = "ViewUserProfile";
    var prod = (List<string>)ViewData["userInfo"];
    var quote = (string)ViewData["userQuote"];
    var post = (List<string>)ViewData["userPost"];
    var postDate = (List<string>)ViewData["postTime"];
}


<div class="row">
    <div class="col-md-3">
        <h3>@prod[1] @prod[2]</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="well">
            <img alt="" src="@ViewBag.Base64String" style="height:200px;width:200px;" />
            <br />
            <br />
            <br />
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <br />
            <br />
            <br>
            <div class="col-md-offset-3">
                <p><b><q>@quote</q></b></p>
            </div>
        </div>
        <div class="row">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
    </div>
</div>
<div class="row">
    <hr />
</div>
<div class="row">
    <div class="col-md-3">
        <p>Age: @prod[5] years old</p>
        <p>Height: @prod[3]</p>
        <p>Weight: @prod[4] lbs</p>
    </div>
    <div class="col-md-9">
        @for (int i = (post.Count - 1); i >= 0; i--)
        {
            <div class="row">
                <div class="col-md-7">
                    <div class="well">
                        @post[i]
                    </div>
                </div>
                <div class="col-md-2">
                    @postDate[i]
                </div>
            </div>
            @*<br />*@
        }
    </div>
</div>


<script src="~/Scripts/userPosts.js"></script>
